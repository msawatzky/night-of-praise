---
import '../styles/global.css';

export type Props = {
  title: string;
  description?: string;
};

const { title, description = 'Night of Praise worship evening details and setlist.' } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1,viewport-fit=cover" />
    <meta name="description" content={description} />
    <meta name="theme-color" content="#04121f" />

    <title>{title}</title>

    <!-- Performance-conscious Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&family=Playfair+Display:wght@500;600;700&display=swap"
      rel="stylesheet"
    />

    <link rel="icon" href="/favicon.svg" type="image/svg+xml" />

    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/jumbotron.png" />
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:image" content="/jumbotron.png" />
  </head>
  <body>
    <slot />
  </body>
</html>

